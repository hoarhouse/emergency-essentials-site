    <!-- Call to Action -->
    <section class="section">
        <div class="container">
            <div class="cta-section">
                <h2 class="cta-title">Create Your Flood Action Plan</h2>
                <p class="cta-subtitle">Generate a customized flood preparedness plan based on your location and flood zone</p>
                <div class="cta-buttons">
                    <button class="cta-button" onclick="generateFloodPlan()">Generate Plan</button>
                    <a href="#" class="cta-button secondary">Download Checklist</a>
                    <a href="#" class="cta-button secondary">Find Flood Zone</a>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Generate flood plan functionality
        function generateFloodPlan() {
            alert('Generating your personalized flood action plan...\n\nThis will include:\n• Property-specific flood risk assessment\n• Evacuation route planning\n• Equipment recommendations\n• Emergency contact lists\n• Seasonal preparation timeline');
        }

        // Affiliate tracking function
        function trackAffiliate(productId, retailer) {
            console.log(`Affiliate click tracked: ${productId} -> ${retailer}`);
            alert(`Redirecting to ${retailer} for ${productId}...\n\nIn production, this would:\n• Track the affiliate click\n• Redirect to the actual product page\n• Earn commission if purchase is made`);
            return false;
        }

        // Checklist functionality
        document.querySelectorAll('.checklist-items li').forEach(item => {
            item.addEventListener('click', function() {
                const checkbox = this.querySelector('.checkbox');
                checkbox.classList.toggle('checked');
                if (checkbox.classList.contains('checked')) {
                    checkbox.textContent = '✓';
                } else {
                    checkbox.textContent = '';
                }
            });
        });

        // Water level updates (simulated)
        function updateWaterLevel() {
            const levels = [
                { value: '6.2 ft', status: 'Normal', class: 'level-normal', description: 'Water levels are within normal parameters' },
                { value: '8.7 ft', status: 'Action Stage', class: 'level-watch', description: 'Water levels are rising but within normal parameters' },
                { value: '12.3 ft', status: 'Flood Warning', class: 'level-warning', description: 'Minor flooding is occurring or imminent' },
                { value: '16.8 ft', status: 'Emergency', class: 'level-emergency', description: 'Major flooding - evacuate immediately' }
            ];
            
            const randomLevel = levels[Math.floor(Math.random() * levels.length)];
            
            const display = document.querySelector('.level-display');
            const status = document.querySelector('.level-status');
            const description = document.querySelector('.level-description');
            
            display.textContent = randomLevel.value;
            display.className = 'level-display ' + randomLevel.class;
            status.textContent = randomLevel.status;
            description.textContent = 'South Platte River at Denver - ' + randomLevel.description;
        }

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Animate elements on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-in');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.equipment-card, .contact-card, .stage-card').forEach(el => {
            observer.observe(el);
        });

        // Update water level every 45 seconds (simulated)
        setInterval(updateWaterLevel, 45000);

        // Emergency contact click to call (on mobile)
        document.querySelectorAll('.contact-number').forEach(number => {
            number.addEventListener('click', function() {
                if (/Mobi|Android/i.test(navigator.userAgent)) {
                    window.location.href = 'tel:' + this.textContent.replace(/\D/g, '');
                }
            });
        });
    </script>
</body>
